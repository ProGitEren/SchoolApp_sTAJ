@using SchoolApplication.Models.ViewModels
@model GradeEditViewModel

<br>
<br>
<h2 style="color:#cf9e5d;">Update Grade</h2>
<hr />

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Name" class="form-label">Student Name</label>
        <input asp-for="Name" class="form-control" disabled />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div style="width:fit-content;height:10px;"></div>

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Department" class="form-label">Student Department</label>
        <input asp-for="Department" class="form-control" disabled />
        <span asp-validation-for="Department" class="text-danger"></span>
    </div>
    <div style="width:fit-content;height:10px;"></div>
    
    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Grade" class="form-label">Student Grade</label>
        <input asp-for="Grade" type="number" min="0" max="100" class="form-control"  />
        <span asp-validation-for="Grade" class="text-danger"></span>
    </div>
    
   
    <div style="margin-top:20px;space-between;">
        <button type="submit"
                class="btn btn-primary"
                style="border-radius:5px;margin:auto;color:bisque">
            Update
        </button>
        <a asp-controller="Grade" asp-action="Index" style="border-radius:5px;margin-left:10px;color:bisque;background-color:#707070;" class="btn">Back To List</a>
    </div>


</form>