@using Microsoft.AspNetCore.Identity
@model List<Student>


@{
    ViewData["Title"] = "Student";
}
<partial name="_Notification" />

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h3 class="text-warning">Students</h3>
    <a asp-controller="Student" asp-action="Create" class="btn btn-primary"> <i class="bi bi-person-plus"></i> &nbsp; New Student</a>
</div>

<div style="max-height:700px;overflow:scroll;">
<table class="table table-bordered table-striped table-dark">
    <thead class="thead-dark">
        <tr>
            <th class="text-primary">Name</th>
            <th class="text-primary">Department</th>
            <th class="text-primary">Email</th>
            <th class="text-primary">Discount</th>
            <th class="text-primary">Price</th>
            <th class="text-primary">GPA</th>
            <th class="text-primary">Grades</th>
            <th class="text-primary"></th>
        </tr>
    </thead>
    
    
    
    <tbody>
        @foreach (var student in Model)
        {
               
                    <tr>
                        <td class="border-left text-info">@student.Name</td>
                        <td class="border-left text-info">@student.Department</td>
                        <td class="border-left text-info">@student.Email</td>
                        <td class="border-left text-info">@student.Discount</td>
                        <td class="border-left text-info">@student.Price</td>
                        <td class="border-left text-info">@student.Gpa</td>
                        <td class ="border-left text-info">
                            @foreach (var grade in student.GetGrades())
                            {
                                <span>@grade.Key: @grade.Value</span>
                                @if (!grade.Equals(student.GetGrades().Last()))
                                {
                                    <span>, </span>
                                }
                            }
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a style="text-decoration:none;margin-right:15px; color:hsl(45, 47%, 57%); " asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id"><i class="bi bi-pen"></i>Edit</a>
                        <a style="text-decoration:none;" class="text-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id"><i class="bi bi-trash2-fill"></i>Delete</a>
                    </div>
                </td>
                
            </tr>
            
        }
    </tbody>
</table>
</div>