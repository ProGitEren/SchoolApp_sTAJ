@model Teacher

<br>
<br>
<h2 style="color:#cf9e5d;">Remove Teacher</h2>
<hr />

<form asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Name" class="form-label">Teacher Name</label>
        <input asp-for="Name" class="form-control" dsiabled />

    </div>

    <div style="width:fit-content;height:10px;"></div>

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="lecture" class="form-label">Lecture Type</label>
        <select asp-for="lecture" class="form-select" required>
            <option value=0 class="form-control">Math</option>
            <option value=1 class="form-control">Science</option>
            <option value=2 class="form-control">Language</option>
            <option value=3 class="form-control">History</option>
            <option value=4 class="form-control">Sports</option>

        </select>
    </div>
    <div style="width:fit-content;height:10px;"></div>
    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Type" class="form-label">Level</label>
        <select asp-for="Type" class="form-select" required>
            <option value=0 class="form-control">Advanced</option>
            <option value=1 class="form-control">Professor</option>
            <option value=2 class="form-control">Head Of Department</option>
            <option value=3 class="form-control">Deputy</option>

        </select>
    </div>
    <div style="width:fit-content;height:10px;"></div>

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" type="tel" disabled />

    </div>
    
    <div style="margin-top:20px;space-between;">
        <button type="button" class="btn btn-primary" style="border-radius: 5px; margin-left: 10px; color: bisque;" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Delete
        </button>
        <a asp-controller="Teacher" asp-action="Index" style="border-radius:5px;margin-left:10px;color:bisque;background-color:#707070;" class="btn">Back To List</a>
    </div>
    <partial name="_DeleteConfirmationTeacher"/>

</form>

<style>
    /* Apply styles to labels on hover */
    .form-group input:hover {
        background-color: #420d65 !important; /* Change this to your desired hover color */
    }

    .form-group select:hover {
        background-color: #420d65 !important;
    }

    .form-select option:hover {
        background-color: #420d65 !important;
    }

</style>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}