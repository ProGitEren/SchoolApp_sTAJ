@model Registerer

<br>
<br>
<h2 style="color:#cf9e5d;">Remove Registerer</h2>
<hr />

<form asp-action="Delete" method="post">
    <input asp-for="Id" hidden />

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Name" class="form-label">Registerer Name</label>
        <input asp-for="Name" class="form-control" disabled />

    </div>

    <div style="width:fit-content;height:10px;"></div>

    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Phone">Phone</label>
        <input asp-for="Phone" class="form-control" type="tel" disabled />

    </div>
    <div style="width:fit-content;height:10px;"></div>
    <div class="form-group">
        <label style="color:bisque;margin-bottom:5px;" asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" disabled />

    </div>
    <div style="margin-top:20px;space-between;">
        <button type="button" class="btn btn-primary" style="border-radius: 5px; margin-left: 10px; color: bisque;" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal">
            Delete
        </button>
        <a asp-controller="Contact" asp-action="Index" style="border-radius:5px;margin-left:10px;color:bisque;background-color:#707070;" class="btn">Back To List</a>
    </div>

    <partial name="_DeleteConfirmationRegisterer"/>


</form>

<style>
    /* Apply styles to labels on hover */
    .form-group input:hover {
        background-color: #420d65 !important; /* Change this to your desired hover color */
    }

    .form-group select:hover {
        background-color: #420d65 !important;
    }

    .form-select option:hover {
        background-color: #420d65 !important;
    }

</style>



@section Scripts{

    <partial name="_ValidationScriptsPartial" />

}